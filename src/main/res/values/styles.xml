<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="android:typeface">sans</item>
    </style>
    <!--
        <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
            <item name="android:windowContentOverlay">@null</item>
            <item name="android:windowBackground">@null</item>
            <item name="metaButtonBarStyle">@style/ButtonBar</item>
            <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
        </style>-->

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="MainLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MainCardView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="LeftButtonBaseStyle">
        <item name="android:textColor">@color/black_button</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textAllCaps">true</item>-->
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RightButtonBaseStyle" parent="@style/LeftButtonBaseStyle">
        <item name="android:textColor">@color/orange_button</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textAllCaps">true</item>-->
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MyCardPhoto" parent="CardPhoto">

        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/bigger_title_size</item>
        <!--<item name="android:fontFamily">sans-serif-light</item>-->

        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingLeft">@dimen/big_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
    </style>

    <style name="CardDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ImageHeaderLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="rippleBackport">true</item>
        <item name="singleAccount">true</item>
        <item name="drawerType">@integer/DRAWERTYPE_ACCOUNTS</item>
    </style>

    <style name="RippleBackport" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
        <item name="rippleBackport">true</item>
    </style>
</resources>
