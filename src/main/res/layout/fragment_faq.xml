                android:textColor="#757575"
                android:textSize="32sp" />

            <include
                android:id="@+id/sample1"
                layout="@layout/text_item" />

            <include
                android:id="@+id/sample2"
                layout="@layout/text_item" />

            <include
                android:id="@+id/sample3"
                layout="@layout/text_item" />

            <include
                android:id="@+id/sample4"
                layout="@layout/text_item" />

            <include
                android:id="@+id/sample5"
                layout="@layout/text_item" />

            <include
                android:id="@+id/sample6"
                layout="@layout/text_item" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>